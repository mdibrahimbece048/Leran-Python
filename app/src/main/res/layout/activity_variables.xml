<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#23707B"
    tools:context=".firstprogram">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textSize="30sp"
        android:padding="11dp"
        android:textColor="@color/black"
        android:background="#7CB3D6"
        android:text="@string/var1"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:splitMotionEvents="true"
                android:layout_height="wrap_content"
                app:cardElevation="9sp"
                app:cardCornerRadius="11dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/var2"
                        android:textSize="25sp"
                        android:layout_margin="7sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/var3"
                        android:textSize="25sp"
                        android:layout_margin="7sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7sp"
                        android:background="@color/white"
                        android:text="@string/var4"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/var5"
                        android:layout_margin="7sp"
                        android:textSize="25sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7sp"
                        android:src="@drawable/var1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/var6"
                        android:layout_margin="7sp"
                        android:textSize="25sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/var7"
                        android:layout_margin="7sp"
                        android:textSize="25sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/var9"
                        android:layout_margin="7sp"
                        android:textSize="25sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/var8"
                        android:layout_margin="7sp"
                        android:textSize="25sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-25sp"
                        android:src="@drawable/var2"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/var9"
                        android:layout_margin="7sp"
                        android:textSize="25sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/var10"
                        android:layout_margin="7sp"
                        android:textSize="25sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-25sp"
                        android:src="@drawable/var3"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/var11"
                        android:layout_margin="7sp"
                        android:textSize="25sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>