<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".encapsulation"
    android:background="#2A4447">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textSize="30sp"
        android:padding="11dp"
        android:textColor="@color/black"
        android:background="#7BA6EE"
        android:textStyle="italic"
        android:textScaleX="1.1"
        android:text="@string/ens"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:splitMotionEvents="true"
                android:layout_marginTop="12sp"
                app:cardBackgroundColor="#DCF3F5"
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#EFF8F9">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300sp"
                        android:src="@drawable/encap"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:src="@drawable/encap2"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="310sp"
                        android:src="@drawable/encap3"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="110sp"
                        android:src="@drawable/encap4"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="270sp"
                        android:src="@drawable/encap5"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>