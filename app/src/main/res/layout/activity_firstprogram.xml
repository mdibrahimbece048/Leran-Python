<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E4B50"
    tools:context=".firstprogram">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textSize="30sp"
        android:padding="11dp"
        android:textColor="@color/white"
        android:background="#496B63"
        android:text="@string/first"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:splitMotionEvents="true"
                android:layout_height="wrap_content"
                app:cardElevation="11dp"
                app:cardCornerRadius="11dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:padding="11dp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:layout_margin="7sp"
                        android:text="@string/h1"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="7sp"
                        android:src="@drawable/h1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:padding="11dp"
                        android:layout_margin="7sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:text="@string/h2"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:textStyle="italic"
                        android:layout_margin="7sp"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:text="@string/h3"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:splitMotionEvents="true"
                android:layout_height="wrap_content"
                app:cardElevation="11dp"
                app:cardCornerRadius="11dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:padding="11dp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:text="@string/first1"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-25sp"
                        android:src="@drawable/f1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:layout_marginTop="-9sp"
                        android:text="@string/first2"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5sp"
                        android:src="@drawable/f2"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:padding="11dp"
                        android:layout_marginTop="-9sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:text="@string/first3"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-20sp"
                        android:src="@drawable/f3"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:padding="11dp"
                        android:textStyle="italic"
                        android:layout_marginTop="-9sp"
                        android:textColor="@color/black"
                        android:background="@color/white"
                        android:text="@string/first4"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>