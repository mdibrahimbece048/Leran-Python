<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VariablesAndTypesForBasicPython"
    android:background="#FDD835">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textSize="30dp"
        android:padding="11dp"
        android:textColor="@color/white"
        android:background="#2979FF"
        android:text="@string/variables"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           android:gravity="center">
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:splitMotionEvents="true"
               android:layout_height="wrap_content"
               app:cardElevation="11dp"
               app:cardCornerRadius="11dp"
               app:cardUseCompatPadding="true"
               android:layout_gravity="center">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="match_parent"
                       android:background="@color/white"
                       android:layout_height="wrap_content"
                       android:textSize="20dp"
                       android:layout_marginTop="5dp"
                       android:text="@string/variablesdef"
                       android:textColor="#3D5AFE"
                       android:layout_marginLeft="10dp"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:splitMotionEvents="true"
               android:layout_height="wrap_content"
               app:cardElevation="11dp"
               app:cardCornerRadius="11dp"
               app:cardUseCompatPadding="true"
               android:layout_marginTop="-30dp"
               android:layout_gravity="center">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:background="@color/white"
                       android:layout_height="wrap_content"
                       android:textSize="20dp"
                       android:layout_marginTop="5dp"
                       android:text="@string/naming"
                       android:backgroundTint="#1DE9B6"
                       android:textStyle="bold"
                       android:textColor="@color/black"
                       android:layout_marginLeft="10dp"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:background="@color/white"
                       android:layout_height="wrap_content"
                       android:textSize="20dp"
                       android:layout_marginTop="5dp"
                       android:text="@string/naming1"
                       android:textColor="#3D5AFE"
                       android:layout_marginLeft="10dp"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:background="@color/white"
                       android:layout_height="wrap_content"
                       android:textSize="20dp"
                       android:layout_marginTop="5dp"
                       android:text="@string/naming2"
                       android:textColor="#3D5AFE"
                       android:layout_marginLeft="10dp"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:background="@color/white"
                       android:layout_height="wrap_content"
                       android:textSize="20dp"
                       android:layout_marginTop="5dp"
                       android:text="@string/naming3"
                       android:textColor="#3D5AFE"
                       android:layout_marginLeft="10dp"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:background="@color/white"
                       android:layout_height="wrap_content"
                       android:textSize="20dp"
                       android:layout_marginTop="5dp"
                       android:text="@string/naming4"
                       android:textColor="#3D5AFE"
                       android:layout_marginLeft="10dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:background="@color/white"
                       android:layout_height="wrap_content"
                       android:textSize="20dp"
                       android:layout_marginTop="5dp"
                       android:text="@string/Assigning"
                       android:backgroundTint="#1DE9B6"
                       android:textStyle="bold"
                       android:textColor="@color/black"
                       android:layout_marginLeft="10dp"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:background="@color/white"
                       android:layout_height="wrap_content"
                       android:textSize="20dp"
                       android:layout_marginTop="5dp"
                       android:text="@string/Assignning1"
                       android:textColor="#3D5AFE"
                       android:layout_marginLeft="10dp"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:background="@color/white"
                       android:layout_height="wrap_content"
                       android:textSize="20dp"
                       android:layout_marginTop="5dp"
                       android:text="@string/examplecode"
                       android:backgroundTint="#1DE9B6"
                       android:textStyle="bold"
                       android:textColor="@color/black"
                       android:layout_marginLeft="10dp"/>
                   <TextView
                       android:layout_width="match_parent"
                       android:background="@color/white"
                       android:layout_height="wrap_content"
                       android:textSize="20dp"
                       android:layout_marginTop="5dp"
                       android:text="@string/examplecode1"
                       android:textColor="#3D5AFE"
                       android:layout_marginLeft="10dp"/>
                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       app:cardCornerRadius="9dp"
                       app:cardBackgroundColor="@color/black"
                       app:cardUseCompatPadding="true">
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:src="@drawable/integer1" />
                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:src="@drawable/string"/>
                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="-40dp"
                               android:src="@drawable/floating"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:textColor="@color/white"
                               android:layout_marginTop="-30dp"
                               android:layout_marginLeft="10dp"
                               android:text="@string/output1"/>
                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:src="@drawable/b2"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:textColor="@color/white"
                               android:layout_marginTop="-30dp"
                               android:layout_marginLeft="10dp"
                               android:text="@string/output2"/>
                       </LinearLayout>

                   </androidx.cardview.widget.CardView>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:splitMotionEvents="true"
               android:layout_height="wrap_content"
               app:cardElevation="11dp"
               app:cardCornerRadius="11dp"
               app:cardUseCompatPadding="true"
               android:layout_marginTop="-30dp"
               android:layout_gravity="center">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="2288dp"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="15dp"
                       android:background="@color/white"
                       android:backgroundTint="#1DE9B6"
                       android:text="@string/datatypes"
                       android:textColor="@color/black"
                       android:textSize="20dp"
                       android:textStyle="bold" />

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="-150dp"
                       android:src="@drawable/data1" />

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="-350dp"
                       android:src="@drawable/data2" />

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="-300dp"
                       android:src="@drawable/data4" />

                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="-150dp"
                       android:src="@drawable/data5" />
               </LinearLayout>

           </androidx.cardview.widget.CardView>


       </LinearLayout>
    </ScrollView>

</LinearLayout>